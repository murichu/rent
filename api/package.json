{
  "name": "haven-api",
  "version": "1.0.0",
  "description": "Haven API - Property Management System Backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "seed": "node prisma/seed.js",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --runInBand --watch",
    "test:coverage": "NODE_ENV=test jest --runInBand --coverage",
    "test:unit": "NODE_ENV=test jest --runInBand --testPathPattern=unit",
    "test:integration": "NODE_ENV=test jest --runInBand --testPathPattern=integration",
    "test:performance": "node src/tests/performance/runPerformanceTests.js",
    "test:load": "artillery run src/tests/performance/load-test.yml",
    "test:stress": "node src/tests/performance/stressTest.js",
    "benchmark": "node src/tests/performance/benchmark.js",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "africastalking": "^0.7.7",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.9",
    "pesapal-node": "^1.0.1",
    "prom-client": "^15.1.3",
    "qrcode.react": "^4.2.0",
    "rate-limit-redis": "^4.2.3",
    "redis": "^5.9.0",
    "response-time": "^2.3.4",
    "sharp": "^0.33.5",
    "speakeasy": "^2.0.0",
    "winston": "^3.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "artillery": "^2.0.26",
    "autocannon": "^7.15.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.19.0",
    "supertest": "^6.3.3"
  }
}
