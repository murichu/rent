// Agency Settings and Configuration
model AgencySettings {
  id                    String    @id @default(auto()) @map("_id") @db.ObjectId
  agencyId              String    @unique @db.ObjectId
  agency                Agency    @relation(fields: [agencyId], references: [id], onDelete: Cascade)
  
  // Business Information
  businessName          String?
  businessAddress       String?
  businessPhone         String?
  businessEmail         String?
  businessWebsite       String?
  businessLogo          String?   // URL to logo image
  
  // Rent Collection Settings
  defaultRentDueDay     Int       @default(5)
  latePaymentGracePeriod Int      @default(3) // days
  latePaymentFee        Int       @default(500) // in cents
  latePaymentFeeType    String    @default("flat") // flat, percentage
  
  // Reminder Settings
  enableRentReminders   Boolean   @default(true)
  reminderDaysBefore    Int[]     @default([7, 3, 1]) // days before due date
  reminderDaysAfter     Int[]     @default([1, 3, 7, 14]) // days after due date
  finalNoticeDay        Int       @default(15) // days after due date
  
  // Communication Settings
  defaultEmailSender    String?
  defaultSMSSender      String?
  communicationChannels Json      @default("{\"email\": true, \"sms\": true, \"whatsapp\": false}")
  
  // Maintenance Settings
  maintenanceCategories String[]  @default(["Plumbing", "Electrical", "HVAC", "Appliance", "Structural", "Other"])
  maintenancePriorities String[]  @default(["Low", "Medium", "High", "Urgent"])
  autoAssignMaintenance Boolean   @default(false)
  
  // Financial Settings
  defaultCurrency       String    @default("KES")
  taxRate               Float     @default(0.0) // percentage
  includeVATInRent      Boolean   @default(false)
  
  // Security Settings
  requireTwoFactor      Boolean   @default(false)
  passwordPolicy        Json      @default("{\"minLength\": 8, \"requireUppercase\": true, \"requireNumbers\": true, \"requireSymbols\": false}")
  sessionTimeout        Int       @default(60) // minutes
  
  // Integration Settings
  mpesaEnabled          Boolean   @default(false)
  pesapalEnabled        Boolean   @default(false)
  kcbEnabled            Boolean   @default(false)
  whatsappEnabled       Boolean   @default(false)
  
  // Backup and Data Settings
  autoBackupEnabled     Boolean   @default(true)
  backupFrequency       String    @default("weekly") // daily, weekly, monthly
  dataRetentionYears    Int       @default(7)
  
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([agencyId])
}
