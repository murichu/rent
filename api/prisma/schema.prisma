generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum PropertyStatus {
  AVAILABLE
  OCCUPIED
  MAINTENANCE
  OFF_MARKET
}

model Agency {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  invoiceDayOfMonth Int @default(28)
  dueDayOfMonth     Int @default(5)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  users      User[]
  properties Property[]
  tenants    Tenant[]
  leases     Lease[]
  payments   Payment[]
  invoices   Invoice[]
  vacateNotices VacateNotice[]
  penalties  Penalty[]
  mpesaTransactions MpesaTransaction[]
  mpesaB2CTransactions MpesaB2CTransaction[]
  mpesaReversals MpesaReversal[]
  kcbTransactions KcbTransaction[]
  maintenanceRequests MaintenanceRequest[]
  communicationTemplates CommunicationTemplate[]
  caretakers Caretaker[]
  agents Agent[]
  viewingAppointments ViewingAppointment[]
  inspections Inspection[]
  expenses Expense[]
  cardTransactions CardTransaction[]
  pesapalTransactions PesapalTransaction[]
  caretakerPayments CaretakerPayment[]
  agentCommissionPayments AgentCommissionPayment[]
  messages Message[]
  messageTemplates MessageTemplate[]
  communicationPreferences CommunicationPreference[]
  channelConfiguration ChannelConfiguration?
  settings AgencySettings?
  customFields CustomField[]
  invoiceShares InvoiceShare[]
  paymentReceipts PaymentReceipt[]
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  email        String   @unique
  passwordHash String
  name         String
  role         Role     @default(USER)
  agencyId     String   @db.ObjectId
  agency       Agency   @relation(fields: [agencyId], references: [id])
  emailVerified Boolean @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  propertyManagers PropertyManager[]
  refreshTokens RefreshToken[]
  verificationTokens VerificationToken[]
  passwordResetTokens PasswordResetToken[]
  twoFactorSecret TwoFactorSecret?
  settings UserSettings?
  invoiceShares InvoiceShare[]
  paymentReceipts PaymentReceipt[]
}

enum Role {
  ADMIN
  USER
}

enum AgentRole {
  AGENT
  SENIOR_AGENT
  AGENT_MANAGER
}

enum PropertyType {
  SINGLE_ROOM
  DOUBLE_ROOM
  BEDSITTER
  ONE_BEDROOM
  TWO_BEDROOM
  THREE_BEDROOM
  FOUR_BEDROOM
  MAISONETTE
  BUNGALOW
  SERVANT_QUARTER
  PENTHOUSE
  TOWNHOUSE
  VILLA
  COMMERCIAL
  OFFICE
}

model Property {
  id         String         @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  address    String
  city       String?
  state      String?
  zip        String?
  bedrooms   Int?
  bathrooms  Float?
  sizeSqFt   Int?
  rentAmount Int?
  status     PropertyStatus @default(AVAILABLE)
  type       PropertyType
  agencyId   String         @db.ObjectId
  agency     Agency         @relation(fields: [agencyId], references: [id])
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  leases     Lease[]
  units      Unit[]
  managers   PropertyManager[]
  caretakers PropertyCaretaker[]
  viewingAppointments ViewingAppointment[]
  expenses   Expense[]
  systemFeeConfig SystemFeeConfig?
  settings   PropertySettings?
  listings   PropertyListing[]

  // Enhanced indexing for better query performance
  @@index([agencyId, status]) // Primary compound index for agency filtering
  @@index([city, status, type]) // Location and type filtering
  @@index([rentAmount, status]) // Price range queries
  @@index([bedrooms, status]) // Bedroom filtering
  @@index([type, agencyId]) // Property type by agency
  @@index([createdAt]) // Sorting by creation date
  @@index([updatedAt]) // Recently updated properties
  @@index([title]) // Text search optimization
  @@index([status, rentAmount]) // Available properties by price
}

model Tenant {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String?
  phone     String?
  agencyId  String   @db.ObjectId
  agency    Agency   @relation(fields: [agencyId], references: [id])
  leases    Lease[]
  vacateNotices VacateNotice[]
  averageRating Float @default(0)
  isHighRisk    Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Enhanced indexing for tenant queries
  @@index([agencyId, isHighRisk]) // High-risk tenant filtering
  @@index([email, agencyId]) // Email lookup by agency
  @@index([phone, agencyId]) // Phone lookup by agency
  @@index([name, agencyId]) // Name search by agency
  @@index([averageRating, agencyId]) // Rating-based queries
  @@index([createdAt, agencyId]) // Recent tenants by agency
  @@unique([email, agencyId]) // Prevent duplicate emails per agency
  @@unique([phone, agencyId]) // Prevent duplicate phones per agency
}

model Lease {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  propertyId         String?  @db.ObjectId
  property           Property? @relation(fields: [propertyId], references: [id])
  unitId             String?  @db.ObjectId
  unit               Unit?    @relation(fields: [unitId], references: [id])
  tenantId           String   @db.ObjectId
  tenant             Tenant   @relation(fields: [tenantId], references: [id])
  agencyId           String   @db.ObjectId
  agency             Agency   @relation(fields: [agencyId], references: [id])
  startDate          DateTime
  endDate            DateTime?
  rentAmount         Int
  paymentDayOfMonth  Int
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  payments           Payment[]
  invoices           Invoice[]
  vacateNotices      VacateNotice[]
  penalties          Penalty[]
  mpesaTransactions  MpesaTransaction[]
  kcbTransactions    KcbTransaction[]
  utilityBills       UtilityBill[]
  inspections        Inspection[]
  agentLeases        AgentLease[]
  securityDeposit    SecurityDeposit?
  pesapalTransactions PesapalTransaction[]
  rentReminders      RentReminder[]
  maintenanceRequests MaintenanceRequest[]
}

enum UnitStatus {
  VACANT
  OCCUPIED
  MAINTENANCE
  OFF_MARKET
}

model Unit {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  propertyId String     @db.ObjectId
  property   Property   @relation(fields: [propertyId], references: [id])
  unitNumber String
  type       PropertyType
  bedrooms   Int?
  bathrooms  Float?
  sizeSqFt   Int?
  rentAmount Int
  status     UnitStatus @default(VACANT)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  leases     Lease[]
  vacateNotices VacateNotice[]
}

enum PaymentMethod {
  MPESA_C2B
  MANUAL
  BANK_TRANSFER
  CASH
}

model Invoice {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  leaseId     String        @db.ObjectId
  lease       Lease         @relation(fields: [leaseId], references: [id])
  agencyId    String        @db.ObjectId
  agency      Agency        @relation(fields: [agencyId], references: [id])
  amount      Int
  periodYear  Int
  periodMonth Int
  issuedAt    DateTime
  dueAt       DateTime
  status      InvoiceStatus @default(PENDING)
  totalPaid   Int           @default(0)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  payments    Payment[]
  penalties   Penalty[]

  @@index([status])
  @@index([dueAt])
  @@index([leaseId])
  @@index([agencyId])
  @@index([status, dueAt])
  @@index([status, leaseId])
  @@index([agencyId, status])
  shares InvoiceShare[]
}

enum InvoiceStatus {
  PENDING
  PARTIAL
  PAID
  OVERDUE
}

model Payment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  leaseId   String   @db.ObjectId
  lease     Lease    @relation(fields: [leaseId], references: [id])
  amount    Int
  paidAt    DateTime
  method    PaymentMethod @default(MANUAL)
  referenceNumber String?
  notes     String?
  invoiceId String?  @db.ObjectId
  invoice   Invoice? @relation(fields: [invoiceId], references: [id])
  agencyId  String   @db.ObjectId
  agency    Agency   @relation(fields: [agencyId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Enhanced indexing for payment queries and reporting
  @@index([agencyId, paidAt]) // Primary agency payment timeline
  @@index([leaseId, paidAt]) // Lease payment history
  @@index([method, agencyId]) // Payment method analytics
  @@index([paidAt, amount]) // Payment amount analysis
  @@index([invoiceId]) // Invoice payment lookup
  @@index([referenceNumber]) // Reference number lookup
  @@index([agencyId, method, paidAt]) // Comprehensive payment analytics
  @@index([createdAt]) // Payment creation timeline
  receipts PaymentReceipt[]
}

// Caretaker Payment Management
model CaretakerPayment {
  id                String        @id @default(auto()) @map("_id") @db.ObjectId
  caretakerId       String        @db.ObjectId
  caretaker         Caretaker     @relation(fields: [caretakerId], references: [id])
  agencyId          String        @db.ObjectId
  agency            Agency        @relation(fields: [agencyId], references: [id])
  amount            Int           // Total amount in cents
  paymentDate       DateTime      // When payment was made
  paymentPeriod     String        // e.g., "2024-01", "January 2024"
  paymentType       String        @default("SALARY") // SALARY, COMMISSION, MIXED
  salaryAmount      Int?          // Salary portion in cents
  commissionAmount  Int?          // Commission portion in cents
  rentCollected     Int?          // Total rent collected for commission calculation
  commissionRate    Float?        // Commission rate used for calculation
  method            PaymentMethod @default(MANUAL)
  referenceNumber   String?       // Transaction reference
  description       String?       // Payment description/notes
  status            String        @default("COMPLETED") // PENDING, COMPLETED, FAILED
  paidBy            String?       // User ID who made the payment
  receiptUrl        String?       // URL to payment receipt
  properties        String[]      @default([]) @db.ObjectId // Properties this payment covers
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  @@index([caretakerId, paymentDate])
  @@index([agencyId, paymentDate])
  @@index([status])
  @@index([method])
  @@index([paymentPeriod])
  @@unique([caretakerId, paymentPeriod]) // Prevent duplicate payments for same period
}

// Agent Commission Payment Management
model AgentCommissionPayment {
  id                String        @id @default(auto()) @map("_id") @db.ObjectId
  agentId           String        @db.ObjectId
  agent             Agent         @relation(fields: [agentId], references: [id])
  agencyId          String        @db.ObjectId
  agency            Agency        @relation(fields: [agencyId], references: [id])
  amount            Int           // Total commission amount in cents
  paymentDate       DateTime      // When payment was made
  paymentPeriod     String        // e.g., "2024-01", "January 2024"
  rentCollected     Int           // Total rent collected for commission calculation
  commissionRate    Float         // Commission rate used for calculation
  method            PaymentMethod @default(MANUAL)
  referenceNumber   String?       // Transaction reference
  description       String?       // Payment description/notes
  status            String        @default("COMPLETED") // PENDING, COMPLETED, FAILED
  paidBy            String?       // User ID who made the payment
  receiptUrl        String?       // URL to payment receipt
  leaseIds          String[]      @default([]) @db.ObjectId // Leases this commission covers
  properties        String[]      @default([]) @db.ObjectId // Properties this commission covers
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  @@index([agentId, paymentDate])
  @@index([agencyId, paymentDate])
  @@index([status])
  @@index([method])
  @@index([paymentPeriod])
  @@unique([agentId, paymentPeriod]) // Prevent duplicate payments for same period
}

// Messaging System Models
model Message {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  agencyId        String        @db.ObjectId
  agency          Agency        @relation(fields: [agencyId], references: [id])
  senderId        String        // User ID or Agent ID who sent the message
  senderType      String        // USER, AGENT
  senderName      String        // Name of sender for display
  recipientType   String        // TENANT, AGENT, USER, BULK
  recipientIds    String[]      @default([]) @db.ObjectId // Tenant/Agent/User IDs
  subject         String?       // Message subject (for email)
  content         String        // Message content
  messageType     String        @default("GENERAL") // GENERAL, RENT_REMINDER, MAINTENANCE, URGENT, NOTICE
  priority        String        @default("NORMAL") // LOW, NORMAL, HIGH, URGENT
  channels        String[]      @default(["email"]) // email, sms, whatsapp
  status          String        @default("PENDING") // PENDING, SENT, DELIVERED, FAILED, PARTIAL
  scheduledAt     DateTime?     // For scheduled messages
  sentAt          DateTime?     // When message was actually sent
  deliveryStatus  Json?         // Channel-specific delivery status
  templateId      String?       @db.ObjectId // Reference to message template
  template        MessageTemplate? @relation(fields: [templateId], references: [id])
  properties      String[]      @default([]) @db.ObjectId // Properties related to message
  leases          String[]      @default([]) @db.ObjectId // Leases related to message
  metadata        Json?         // Additional message metadata
  invoiceShares   InvoiceShare[] // Invoice shares using this message
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([agencyId, createdAt])
  @@index([senderId, senderType])
  @@index([recipientType])
  @@index([messageType])
  @@index([status])
  @@index([scheduledAt])
  @@index([agencyId, messageType, createdAt])
}

model MessageTemplate {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  agencyId    String    @db.ObjectId
  agency      Agency    @relation(fields: [agencyId], references: [id])
  name        String    // Template name
  category    String    // RENT_REMINDER, PAYMENT_CONFIRMATION, MAINTENANCE, WELCOME, NOTICE, GENERAL
  subject     String?   // Email subject template
  content     String    // Message content template with variables
  channels    String[]  @default(["email"]) // Supported channels
  variables   String[]  @default([]) // Available variables like {tenantName}, {amount}, etc.
  isActive    Boolean   @default(true)
  isDefault   Boolean   @default(false)
  createdBy   String?   // User/Agent ID who created template
  messages    Message[] // Messages using this template
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([agencyId])
  @@index([category])
  @@index([isActive])
  @@unique([agencyId, name])
}

model MessageRecipient {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  messageId       String    @db.ObjectId
  recipientId     String    @db.ObjectId // Tenant/Agent/User ID
  recipientType   String    // TENANT, AGENT, USER
  recipientName   String    // Name for display
  recipientPhone  String?   // Phone number
  recipientEmail  String?   // Email address
  channels        String[]  @default([]) // Channels used for this recipient
  deliveryStatus  Json      @default("{}") // Channel-specific delivery status
  sentAt          DateTime?
  deliveredAt     DateTime?
  readAt          DateTime?
  failureReason   String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([messageId])
  @@index([recipientId, recipientType])
  @@index([sentAt])
}

// Communication Preferences for Recipients
model CommunicationPreference {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  agencyId        String    @db.ObjectId
  agency          Agency    @relation(fields: [agencyId], references: [id])
  recipientId     String    @db.ObjectId // Tenant/Agent/User ID
  recipientType   String    // TENANT, AGENT, USER
  preferredChannels String[] @default(["email"]) // Preferred communication channels
  emailEnabled    Boolean   @default(true)
  smsEnabled      Boolean   @default(true)
  whatsappEnabled Boolean   @default(false)
  emailAddress    String?   // Override email address
  phoneNumber     String?   // Override phone number
  whatsappNumber  String?   // Override WhatsApp number
  quietHours      Json?     // Quiet hours configuration
  messageTypes    Json?     // Preferences per message type
  language        String    @default("en") // Preferred language
  timezone        String    @default("Africa/Nairobi")
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([agencyId])
  @@index([recipientId, recipientType])
  @@unique([agencyId, recipientId, recipientType])
}

// Channel Configuration for Agency
model ChannelConfiguration {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  agencyId        String    @unique @db.ObjectId
  agency          Agency    @relation(fields: [agencyId], references: [id])
  
  // Email Configuration
  emailEnabled    Boolean   @default(true)
  emailProvider   String?   // SENDGRID, AWS_SES, SMTP
  emailConfig     Json?     // Provider-specific configuration
  emailFromName   String?
  emailFromAddress String?
  
  // SMS Configuration
  smsEnabled      Boolean   @default(false)
  smsProvider     String?   // TWILIO, AFRICASTALKING, CUSTOM
  smsConfig       Json?     // Provider-specific configuration
  smsFromNumber   String?
  
  // WhatsApp Configuration
  whatsappEnabled Boolean   @default(false)
  whatsappProvider String?  // META, TWILIO, CUSTOM
  whatsappConfig  Json?     // Provider-specific configuration
  whatsappFromNumber String?
  
  // General Settings
  defaultChannels String[]  @default(["email"])
  maxRetries      Int       @default(3)
  retryDelay      Int       @default(300) // seconds
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([agencyId])
}

enum ManagerRole {
  LANDLORD
  MANAGER
  AGENCY
}

model PropertyManager {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  propertyId String      @db.ObjectId
  property   Property    @relation(fields: [propertyId], references: [id])
  userId     String      @db.ObjectId
  user       User        @relation(fields: [userId], references: [id])
  role       ManagerRole
  createdAt  DateTime    @default(now())
}

model VacateNotice {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  leaseId         String    @db.ObjectId
  lease           Lease     @relation(fields: [leaseId], references: [id])
  tenantId        String    @db.ObjectId
  tenant          Tenant    @relation(fields: [tenantId], references: [id])
  unitId          String?   @db.ObjectId
  unit            Unit?     @relation(fields: [unitId], references: [id])
  agencyId        String    @db.ObjectId
  agency          Agency    @relation(fields: [agencyId], references: [id])
  noticeDate      DateTime
  plannedVacateAt DateTime
  actualVacateAt  DateTime?
  status          NoticeStatus @default(PENDING)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  penalties       Penalty[]
}

enum NoticeStatus {
  PENDING
  COMPLETED
  OVERDUE
}

enum PenaltyType {
  LATE_PAYMENT
  OVERSTAY
}

model Penalty {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  agencyId   String      @db.ObjectId
  agency     Agency      @relation(fields: [agencyId], references: [id])
  leaseId    String?     @db.ObjectId
  lease      Lease?      @relation(fields: [leaseId], references: [id])
  invoiceId  String?     @db.ObjectId
  invoice    Invoice?    @relation(fields: [invoiceId], references: [id])
  noticeId   String?     @db.ObjectId
  notice     VacateNotice? @relation(fields: [noticeId], references: [id])
  type       PenaltyType
  amount     Int
  days       Int          @default(0)
  computedAt DateTime     @default(now())
}

// Authentication tokens
model RefreshToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String   @unique
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model VerificationToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String   @unique
  userId    String   @unique @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model PasswordResetToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String   @unique
  userId    String   @unique @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  used      Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model TwoFactorSecret {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @unique @db.ObjectId
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  secret      String?
  enabled     Boolean  @default(false)
  backupCodes String[] @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// M-Pesa Daraja API Transactions (C2B STK Push)
model MpesaTransaction {
  id                   String    @id @default(auto()) @map("_id") @db.ObjectId
  merchantRequestId    String
  checkoutRequestId    String    @unique
  phoneNumber          String
  amount               Int
  accountReference     String
  transactionDesc      String?
  status               String    @default("PENDING") // PENDING, SUCCESS, FAILED, CANCELLED
  responseCode         String?
  responseDescription  String?
  mpesaReceiptNumber   String?
  transactionDate      DateTime?
  resultCode           String?
  resultDescription    String?
  leaseId              String?   @db.ObjectId
  lease                Lease?    @relation(fields: [leaseId], references: [id])
  agencyId             String?   @db.ObjectId
  agency               Agency?   @relation(fields: [agencyId], references: [id])
  createdAt            DateTime  @default(now())
  completedAt          DateTime?
  updatedAt            DateTime  @updatedAt

  @@index([checkoutRequestId])
  @@index([phoneNumber])
  @@index([status])
  @@index([leaseId])
}

// M-Pesa B2C Transactions (Business to Customer - Refunds/Payouts)
model MpesaB2CTransaction {
  id                        String    @id @default(auto()) @map("_id") @db.ObjectId
  conversationId            String    @unique
  originatorConversationId  String
  phoneNumber               String
  amount                    Int
  remarks                   String
  occasion                  String?
  status                    String    @default("PENDING") // PENDING, SUCCESS, FAILED
  responseCode              String?
  responseDescription       String?
  transactionId             String?   // M-Pesa transaction receipt
  transactionAmount         Float?
  receiverName              String?
  resultCode                String?
  resultDescription         String?
  agencyId                  String?   @db.ObjectId
  agency                    Agency?   @relation(fields: [agencyId], references: [id])
  createdAt                 DateTime  @default(now())
  completedAt               DateTime?
  updatedAt                 DateTime  @updatedAt

  @@index([conversationId])
  @@index([phoneNumber])
  @@index([status])
}

// M-Pesa Transaction Reversals
model MpesaReversal {
  id                        String    @id @default(auto()) @map("_id") @db.ObjectId
  conversationId            String    @unique
  originatorConversationId  String
  transactionId             String    // Original transaction ID to reverse
  amount                    Int
  remarks                   String
  status                    String    @default("PENDING") // PENDING, SUCCESS, FAILED
  responseCode              String?
  responseDescription       String?
  resultCode                String?
  resultDescription         String?
  debitAccountBalance       String?
  agencyId                  String?   @db.ObjectId
  agency                    Agency?   @relation(fields: [agencyId], references: [id])
  createdAt                 DateTime  @default(now())
  completedAt               DateTime?
  updatedAt                 DateTime  @updatedAt

  @@index([conversationId])
  @@index([transactionId])
}

// M-Pesa Account Balance Checks
model MpesaBalanceCheck {
  id                        String    @id @default(auto()) @map("_id") @db.ObjectId
  conversationId            String    @unique
  originatorConversationId  String
  status                    String    @default("PENDING") // PENDING, SUCCESS, FAILED
  responseCode              String?
  responseDescription       String?
  accountBalance            String?   // Full balance string from M-Pesa
  availableBalance          Float?    // Parsed available balance
  resultCode                String?
  resultDescription         String?
  createdAt                 DateTime  @default(now())
  completedAt               DateTime?
  updatedAt                 DateTime  @updatedAt

  @@index([conversationId])
  @@index([completedAt])
}

// KCB Buni Transactions (All types)
model KcbTransaction {
  id                      String    @id @default(auto()) @map("_id") @db.ObjectId
  transactionRef          String    @unique
  checkoutRequestId       String?   // For M-Pesa STK
  phoneNumber             String?   // For M-Pesa/PesaLink
  amount                  Int
  accountReference        String?
  narrative               String?
  type                    String    // MPESA_STK, SEND_TO_BANK, BANK_TO_BANK, PESALINK
  status                  String    @default("PENDING") // PENDING, SUCCESS, FAILED
  responseCode            String?
  responseDescription     String?
  transactionId           String?   // KCB transaction ID
  mpesaReceiptNumber      String?   // For M-Pesa transactions
  transactionDate         DateTime?
  resultCode              String?
  resultDescription       String?
  destinationBank         String?   // Bank code for inter-bank
  destinationAccount      String?   // Destination account number
