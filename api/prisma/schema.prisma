  inquiry               PropertyInquiry? @relation(fields: [inquiryId], references: [id])
  buyerName             String
  buyerPhone            String
  buyerEmail            String?
  salePrice             Int       // Final sale price in cents
  agentId               String?   @db.ObjectId
  agent                 Agent?    @relation(fields: [agentId], references: [id])
  agentCommissionRate   Float?    // Commission rate used
