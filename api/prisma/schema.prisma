generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum PropertyStatus {
  AVAILABLE
  OCCUPIED
  MAINTENANCE
  OFF_MARKET
}

model Agency {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  invoiceDayOfMonth Int @default(28)
  dueDayOfMonth     Int @default(5)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  users      User[]
  properties Property[]
  tenants    Tenant[]
  leases     Lease[]
  payments   Payment[]
  invoices   Invoice[]
  vacateNotices VacateNotice[]
  penalties  Penalty[]
  mpesaTransactions MpesaTransaction[]
  mpesaB2CTransactions MpesaB2CTransaction[]
  mpesaReversals MpesaReversal[]
  kcbTransactions KcbTransaction[]
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  email        String   @unique
  passwordHash String
  name         String
  role         Role     @default(USER)
  agencyId     String   @db.ObjectId
  agency       Agency   @relation(fields: [agencyId], references: [id])
  emailVerified Boolean @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  propertyManagers PropertyManager[]
  refreshTokens RefreshToken[]
  verificationTokens VerificationToken[]
  passwordResetTokens PasswordResetToken[]
  twoFactorSecret TwoFactorSecret?
}

enum Role {
  ADMIN
  USER
}

enum PropertyType {
  SINGLE_ROOM
  DOUBLE_ROOM
  BEDSITTER
  ONE_BEDROOM
  TWO_BEDROOM
  THREE_BEDROOM
  FOUR_BEDROOM
  MAISONETTE
  BUNGALOW
  SERVANT_QUARTER
  PENTHOUSE
  TOWNHOUSE
  VILLA
  COMMERCIAL
  OFFICE
}

model Property {
  id         String         @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  address    String
  city       String?
  state      String?
  zip        String?
  bedrooms   Int?
  bathrooms  Float?
  sizeSqFt   Int?
  rentAmount Int?
  status     PropertyStatus @default(AVAILABLE)
  type       PropertyType
  agencyId   String         @db.ObjectId
  agency     Agency         @relation(fields: [agencyId], references: [id])
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  leases     Lease[]
  units      Unit[]
  managers   PropertyManager[]
  caretakers PropertyCaretaker[]
  viewingAppointments ViewingAppointment[]
}

model Tenant {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String?
  phone     String?
  agencyId  String   @db.ObjectId
  agency    Agency   @relation(fields: [agencyId], references: [id])
  leases    Lease[]
  vacateNotices VacateNotice[]
  averageRating Float @default(0)
  isHighRisk    Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Lease {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  propertyId         String?  @db.ObjectId
  property           Property? @relation(fields: [propertyId], references: [id])
  unitId             String?  @db.ObjectId
  unit               Unit?    @relation(fields: [unitId], references: [id])
  tenantId           String   @db.ObjectId
  tenant             Tenant   @relation(fields: [tenantId], references: [id])
  agencyId           String   @db.ObjectId
  agency             Agency   @relation(fields: [agencyId], references: [id])
  startDate          DateTime
  endDate            DateTime?
  rentAmount         Int
  paymentDayOfMonth  Int
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  payments           Payment[]
  invoices           Invoice[]
  vacateNotices      VacateNotice[]
  penalties          Penalty[]
  mpesaTransactions  MpesaTransaction[]
  kcbTransactions    KcbTransaction[]
  utilityBills       UtilityBill[]
  inspections        Inspection[]
  agentLeases        AgentLease[]
}

enum UnitStatus {
  VACANT
  OCCUPIED
  MAINTENANCE
  OFF_MARKET
}

model Unit {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  propertyId String     @db.ObjectId
  property   Property   @relation(fields: [propertyId], references: [id])
  unitNumber String
  type       PropertyType
  bedrooms   Int?
  bathrooms  Float?
  sizeSqFt   Int?
  rentAmount Int
  status     UnitStatus @default(VACANT)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  leases     Lease[]
  vacateNotices VacateNotice[]
}

enum PaymentMethod {
  MPESA_C2B
  MANUAL
}

model Invoice {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  leaseId     String        @db.ObjectId
  lease       Lease         @relation(fields: [leaseId], references: [id])
  agencyId    String        @db.ObjectId
  agency      Agency        @relation(fields: [agencyId], references: [id])
  amount      Int
  periodYear  Int
  periodMonth Int
  issuedAt    DateTime
  dueAt       DateTime
  status      InvoiceStatus @default(PENDING)
  totalPaid   Int           @default(0)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  payments    Payment[]
  penalties   Penalty[]
}

enum InvoiceStatus {
  PENDING
  PARTIAL
  PAID
  OVERDUE
}

model Payment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  leaseId   String   @db.ObjectId
  lease     Lease    @relation(fields: [leaseId], references: [id])
  amount    Int
  paidAt    DateTime
  method    PaymentMethod @default(MANUAL)
  referenceNumber String?
  notes     String?
  invoiceId String?  @db.ObjectId
  invoice   Invoice? @relation(fields: [invoiceId], references: [id])
  agencyId  String   @db.ObjectId
  agency    Agency   @relation(fields: [agencyId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ManagerRole {
  LANDLORD
  MANAGER
  AGENCY
}

model PropertyManager {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  propertyId String      @db.ObjectId
  property   Property    @relation(fields: [propertyId], references: [id])
  userId     String      @db.ObjectId
  user       User        @relation(fields: [userId], references: [id])
  role       ManagerRole
  createdAt  DateTime    @default(now())
}

model VacateNotice {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  leaseId         String    @db.ObjectId
  lease           Lease     @relation(fields: [leaseId], references: [id])
  tenantId        String    @db.ObjectId
  tenant          Tenant    @relation(fields: [tenantId], references: [id])
  unitId          String?   @db.ObjectId
  unit            Unit?     @relation(fields: [unitId], references: [id])
  agencyId        String    @db.ObjectId
  agency          Agency    @relation(fields: [agencyId], references: [id])
  noticeDate      DateTime
  plannedVacateAt DateTime
  actualVacateAt  DateTime?
  status          NoticeStatus @default(PENDING)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  penalties       Penalty[]
}

enum NoticeStatus {
  PENDING
  COMPLETED
  OVERDUE
}

enum PenaltyType {
  LATE_PAYMENT
  OVERSTAY
}

model Penalty {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  agencyId   String      @db.ObjectId
  agency     Agency      @relation(fields: [agencyId], references: [id])
  leaseId    String?     @db.ObjectId
  lease      Lease?      @relation(fields: [leaseId], references: [id])
  invoiceId  String?     @db.ObjectId
  invoice    Invoice?    @relation(fields: [invoiceId], references: [id])
  noticeId   String?     @db.ObjectId
  notice     VacateNotice? @relation(fields: [noticeId], references: [id])
  type       PenaltyType
  amount     Int
  days       Int          @default(0)
  computedAt DateTime     @default(now())
}

// Authentication tokens
model RefreshToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String   @unique
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model VerificationToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String   @unique
  userId    String   @unique @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model PasswordResetToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String   @unique
  userId    String   @unique @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  used      Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model TwoFactorSecret {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @unique @db.ObjectId
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  secret      String?
  enabled     Boolean  @default(false)
  backupCodes String[] @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// M-Pesa Daraja API Transactions (C2B STK Push)
model MpesaTransaction {
  id                   String    @id @default(auto()) @map("_id") @db.ObjectId
  merchantRequestId    String
  checkoutRequestId    String    @unique
  phoneNumber          String
  amount               Int
  accountReference     String
  transactionDesc      String?
  status               String    @default("PENDING") // PENDING, SUCCESS, FAILED, CANCELLED
  responseCode         String?
  responseDescription  String?
  mpesaReceiptNumber   String?
  transactionDate      DateTime?
  resultCode           String?
  resultDescription    String?
  leaseId              String?   @db.ObjectId
  lease                Lease?    @relation(fields: [leaseId], references: [id])
  agencyId             String?   @db.ObjectId
  agency               Agency?   @relation(fields: [agencyId], references: [id])
  createdAt            DateTime  @default(now())
  completedAt          DateTime?
  updatedAt            DateTime  @updatedAt

  @@index([checkoutRequestId])
  @@index([phoneNumber])
  @@index([status])
  @@index([leaseId])
}

// M-Pesa B2C Transactions (Business to Customer - Refunds/Payouts)
model MpesaB2CTransaction {
  id                        String    @id @default(auto()) @map("_id") @db.ObjectId
  conversationId            String    @unique
  originatorConversationId  String
  phoneNumber               String
  amount                    Int
  remarks                   String
  occasion                  String?
  status                    String    @default("PENDING") // PENDING, SUCCESS, FAILED
  responseCode              String?
  responseDescription       String?
  transactionId             String?   // M-Pesa transaction receipt
  transactionAmount         Float?
  receiverName              String?
  resultCode                String?
  resultDescription         String?
  agencyId                  String?   @db.ObjectId
  agency                    Agency?   @relation(fields: [agencyId], references: [id])
  createdAt                 DateTime  @default(now())
  completedAt               DateTime?
  updatedAt                 DateTime  @updatedAt

  @@index([conversationId])
  @@index([phoneNumber])
  @@index([status])
}

// M-Pesa Transaction Reversals
model MpesaReversal {
  id                        String    @id @default(auto()) @map("_id") @db.ObjectId
  conversationId            String    @unique
  originatorConversationId  String
  transactionId             String    // Original transaction ID to reverse
  amount                    Int
  remarks                   String
  status                    String    @default("PENDING") // PENDING, SUCCESS, FAILED
  responseCode              String?
  responseDescription       String?
  resultCode                String?
  resultDescription         String?
  debitAccountBalance       String?
  agencyId                  String?   @db.ObjectId
  agency                    Agency?   @relation(fields: [agencyId], references: [id])
  createdAt                 DateTime  @default(now())
  completedAt               DateTime?
  updatedAt                 DateTime  @updatedAt

  @@index([conversationId])
  @@index([transactionId])
}

// M-Pesa Account Balance Checks
model MpesaBalanceCheck {
  id                        String    @id @default(auto()) @map("_id") @db.ObjectId
  conversationId            String    @unique
  originatorConversationId  String
  status                    String    @default("PENDING") // PENDING, SUCCESS, FAILED
  responseCode              String?
  responseDescription       String?
  accountBalance            String?   // Full balance string from M-Pesa
  availableBalance          Float?    // Parsed available balance
  resultCode                String?
  resultDescription         String?
  createdAt                 DateTime  @default(now())
  completedAt               DateTime?
  updatedAt                 DateTime  @updatedAt

  @@index([conversationId])
  @@index([completedAt])
}

// KCB Buni Transactions (All types)
model KcbTransaction {
  id                      String    @id @default(auto()) @map("_id") @db.ObjectId
  transactionRef          String    @unique
  checkoutRequestId       String?   // For M-Pesa STK
  phoneNumber             String?   // For M-Pesa/PesaLink
  amount                  Int
  accountReference        String?
  narrative               String?
  type                    String    // MPESA_STK, SEND_TO_BANK, BANK_TO_BANK, PESALINK
  status                  String    @default("PENDING") // PENDING, SUCCESS, FAILED
  responseCode            String?
  responseDescription     String?
  transactionId           String?   // KCB transaction ID
  mpesaReceiptNumber      String?   // For M-Pesa transactions
  transactionDate         DateTime?
  resultCode              String?
  resultDescription       String?
  destinationBank         String?   // Bank code for inter-bank
  destinationAccount      String?   // Destination account number
  destinationAccountName  String?   // Destination account name
  leaseId                 String?   @db.ObjectId
  lease                   Lease?    @relation(fields: [leaseId], references: [id])
  agencyId                String?   @db.ObjectId
  agency                  Agency?   @relation(fields: [agencyId], references: [id])
  createdAt               DateTime  @default(now())
  completedAt             DateTime?
  updatedAt               DateTime  @updatedAt

  @@index([transactionRef])
  @@index([checkoutRequestId])
  @@index([phoneNumber])
  @@index([status])
  @@index([type])
  @@index([leaseId])
}

// KCB Account Statement Requests
model KcbStatementRequest {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  accountNumber     String
  startDate         DateTime
  endDate           DateTime
  transactionCount  Int       @default(0)
  status            String    @default("PENDING") // PENDING, SUCCESS, FAILED
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([accountNumber])
  @@index([createdAt])
}

// Utility Bills (Water & Electricity) - Kenya Specific
model UtilityBill {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  leaseId           String    @db.ObjectId
  lease             Lease     @relation(fields: [leaseId], references: [id])
  type              String    // WATER, ELECTRICITY
  meterNumber       String?
  previousReading   Float
  currentReading    Float
  units             Float     // kWh or mÂ³
  ratePerUnit       Float
  amount            Int
  month             Int       // 1-12
  year              Int
  status            String    @default("PENDING") // PENDING, PAID
  dueDate           DateTime
  paidAt            DateTime?
  paymentMethod     String?   // MPESA, BANK, CASH
  paymentReference  String?
  meterPhotoUrl     String?   // Photo of meter reading
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([leaseId])
  @@index([type])
  @@index([status])
  @@index([year, month])
}

// Caretakers (Property Managers/Watchmen) - Kenya Specific
model Caretaker {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  phone         String
  email         String?
  idNumber      String?
  agencyId      String    @db.ObjectId
  agency        Agency    @relation(fields: [agencyId], references: [id])
  properties    PropertyCaretaker[]
  commissionRate Float    @default(0) // Percentage or flat amount
  rating        Float     @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model PropertyCaretaker {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  propertyId  String    @db.ObjectId
  property    Property  @relation(fields: [propertyId], references: [id])
  caretakerId String    @db.ObjectId
  caretaker   Caretaker @relation(fields: [caretakerId], references: [id])
  assignedAt  DateTime  @default(now())
}

// Viewing Appointments
model ViewingAppointment {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  propertyId  String    @db.ObjectId
  property    Property  @relation(fields: [propertyId], references: [id])
  contactName String
  contactPhone String
  contactEmail String?
  scheduledAt DateTime
  status      String    @default("SCHEDULED") // SCHEDULED, COMPLETED, CANCELLED, NO_SHOW
  notes       String?
  feedback    String?
  agencyId    String    @db.ObjectId
  agency      Agency    @relation(fields: [agencyId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([propertyId])
  @@index([scheduledAt])
  @@index([status])
}

// Move-In/Move-Out Inspections
model Inspection {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  leaseId       String    @db.ObjectId
  lease         Lease     @relation(fields: [leaseId], references: [id])
  type          String    // MOVE_IN, MOVE_OUT
  inspectionDate DateTime
  inspector     String    // Name of inspector
  checklist     Json      // Inspection checklist with ratings
  photos        String[]  @default([]) // Photo URLs
  damages       Json?     // Damage assessment with costs
  totalDamageCost Int     @default(0)
  notes         String?
  tenantSignature String? // Digital signature or confirmation
  agencyId      String    @db.ObjectId
  agency        Agency    @relation(fields: [agencyId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([leaseId])
  @@index([type])
}

// Agent Commission Tracking
model Agent {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  phone           String
  email           String?
  agencyId        String    @db.ObjectId
  agency          Agency    @relation(fields: [agencyId], references: [id])
  commissionRate  Float     @default(100) // Percentage (100 = one month rent)
  totalEarned     Float     @default(0)
  rating          Float     @default(0)
  leases          AgentLease[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model AgentLease {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  agentId       String    @db.ObjectId
  agent         Agent     @relation(fields: [agentId], references: [id])
  leaseId       String    @db.ObjectId
  lease         Lease     @relation(fields: [leaseId], references: [id])
  commission    Float     // Commission amount
  paid          Boolean   @default(false)
  paidAt        DateTime?
  createdAt     DateTime  @default(now())
}

// Manual tenant ratings removed; system is fully automated
