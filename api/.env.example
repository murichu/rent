# Database
DATABASE_URL=mongodb://127.0.0.1:27017/rental_saas
# Or use MongoDB Atlas:
# DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/database_name

# Redis Configuration (Required for caching, sessions, and job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# Or use Redis Cloud:
# REDIS_HOST=redis-xxxxx.redis-cloud.com
# REDIS_PORT=xxxxx
# REDIS_PASSWORD=your_redis_password

# Session Configuration
SESSION_TTL=86400
SESSION_COOKIE_NAME=haven_session

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars-long
REFRESH_TOKEN_SECRET=your-refresh-secret-key-change-in-production-min-32-chars-long

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
FRONTEND_URL=http://localhost:5173

# Alert Configuration
ADMIN_ALERT_EMAILS=admin@example.com,tech@example.com
ADMIN_ALERT_PHONES=254712345678,254723456789
SUPPORT_EMAIL=support@example.com
SUPPORT_PHONE=254712345678

# Payment Configuration
MPESA_PAYBILL=123456
BANK_NAME=Your Bank Name
BANK_ACCOUNT=1234567890

# M-Pesa Configuration (Sandbox/Production)
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=your_consumer_key_here
MPESA_CONSUMER_SECRET=your_consumer_secret_here
MPESA_SHORTCODE=174379
MPESA_PASSKEY=your_passkey_here
MPESA_CALLBACK_URL=http://localhost:4000/api/v1/mpesa/callback
MPESA_INITIATOR_NAME=testapi
MPESA_SECURITY_CREDENTIAL=your_security_credential

# Africa's Talking (SMS/WhatsApp)
AFRICASTALKING_API_KEY=your_africastalking_api_key
AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_SENDER_ID=Haven

# PesaPal Configuration
PESAPAL_CONSUMER_KEY=your_pesapal_consumer_key
PESAPAL_CONSUMER_SECRET=your_pesapal_consumer_secret
PESAPAL_ENVIRONMENT=sandbox
PESAPAL_IPN_URL=http://localhost:4000/api/v1/pesapal/ipn

# Application Settings
PORT=4000
NODE_ENV=development
ENABLE_CRON_JOBS=true
LOG_LEVEL=info
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Development Options
DISABLE_REDIS=false

# Job Queue Configuration
ENABLE_JOB_QUEUE=true
ENABLE_REPORT_SCHEDULING=true
JOB_QUEUE_CONCURRENCY=5
JOB_QUEUE_MAX_RETRIES=3
JOB_QUEUE_RETRY_DELAY=5000

# Optional: Enable specific features
ENABLE_ALERTS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_LOAD_BALANCER=true

# KCB Bank Integration (Optional)
KCB_ENVIRONMENT=sandbox
KCB_CLIENT_ID=your_kcb_client_id
KCB_CLIENT_SECRET=your_kcb_client_secret
KCB_API_KEY=your_kcb_api_key
KCB_ACCOUNT_NUMBER=your_account_number
KCB_PASSKEY=your_kcb_passkey
BACKEND_URL=http://localhost:4000

# Load Balancer Configuration (Optional)
INSTANCE_ID=api-1
SHUTDOWN_TIMEOUT=30000
TRUST_PROXY=true
