# Database
DATABASE_URL=mongodb://127.0.0.1:27017/rental_saas

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
REFRESH_TOKEN_SECRET=your-refresh-secret-key-change-in-production

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
FRONTEND_URL=http://localhost:5173

# Server Configuration
PORT=4000
NODE_ENV=development

# Features
ENABLE_CRON_JOBS=true
LOG_LEVEL=info

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# M-Pesa Daraja API Configuration
# Get credentials from: https://developer.safaricom.co.ke/
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=your-consumer-key
MPESA_CONSUMER_SECRET=your-consumer-secret
MPESA_SHORTCODE=174379
MPESA_PASSKEY=your-passkey
MPESA_CALLBACK_URL=https://yourdomain.com/api/v1/mpesa/callback

# M-Pesa Initiator Credentials (for B2C, Reversal, Balance)
# Get from Daraja portal after approval
MPESA_INITIATOR_NAME=testapi
MPESA_SECURITY_CREDENTIAL=your-security-credential

# M-Pesa Production Settings (when ready)
# MPESA_ENVIRONMENT=production
# MPESA_SHORTCODE=your-production-shortcode
# MPESA_PASSKEY=your-production-passkey
# MPESA_CALLBACK_URL=https://yourdomain.com/api/v1/mpesa/callback
# MPESA_INITIATOR_NAME=your-initiator
# MPESA_SECURITY_CREDENTIAL=your-production-security-credential

# KCB Buni API Configuration
# Get credentials from: https://developer.kcbgroup.com/
KCB_ENVIRONMENT=sandbox
KCB_CLIENT_ID=your-client-id
KCB_CLIENT_SECRET=your-client-secret
KCB_API_KEY=your-api-key
KCB_ACCOUNT_NUMBER=your-account-number
KCB_PASSKEY=your-passkey
BACKEND_URL=http://localhost:4000

# KCB Production Settings (when ready)
# KCB_ENVIRONMENT=production
# KCB_CLIENT_ID=your-production-client-id
# KCB_CLIENT_SECRET=your-production-client-secret
# KCB_ACCOUNT_NUMBER=your-production-account
# BACKEND_URL=https://yourdomain.com

# Africa's Talking (SMS & WhatsApp) - Kenya
# Get credentials from: https://account.africastalking.com/
AFRICASTALKING_API_KEY=your-api-key
AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_SENDER_ID=Haven

# WhatsApp Business API (Optional - for template messages)
WHATSAPP_PROVIDER=africastalking
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
