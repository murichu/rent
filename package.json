{
  "name": "haven",
  "version": "1.0.0",
  "description": "Haven - Property Management System",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install --prefix frontend && npm install --prefix api",
    "start:frontend": "npm run dev --prefix frontend",
    "start:api": "npm run dev --prefix api",
    "dev": "concurrently -n \"FRONTEND,API\" -c \"cyan,green\" \"npm run start:frontend\" \"npm run start:api\"",
    "build": "npm run build --prefix frontend",
    "lint": "npm run lint --prefix frontend",
    "preview": "npm run preview --prefix frontend"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
